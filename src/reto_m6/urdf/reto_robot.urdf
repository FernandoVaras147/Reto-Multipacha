<?xml version="1.0"?>
<robot name="reto_robot">

  <!-- BASE -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.4 0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- CILINDRO VERTICAL (COLUMNA) -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0.1 0.1 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- CILINDRO HORIZONTAL (BRAZO SUPERIOR) -->
  <link name="link2">
    <visual>
      <!-- Posicionamos el cilindro arriba y rotado para que estÃ© horizontal -->
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.4"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 1.0 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <!-- UNION ENTRE BASE Y CILINDRO VERTICAL -->
  <joint name="joint1" type="fixed">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- UNION REVOLUTE ENTRE CILINDRO VERTICAL Y CILINDRO HORIZONTAL -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

</robot>
